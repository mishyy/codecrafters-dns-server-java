# https://gds-way.cloudapps.digital/manuals/programming-languages/editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = space
ij_java_continuation_indent_size = 8
max_line_length = 120
ij_visual_guides = 80, 120
ij_any_space_before_array_initializer_left_brace = true
ij_java_spaces_within_array_initializer_braces = true